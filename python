<script>
    function verificarSpam() {
        const texto = document.getElementById("emailTexto").value.toLowerCase();
        const resultado = document.getElementById("resultado");

        const palavrasSpam = [
            "ganhe dinheiro",
            "clique aqui",
            "promoÃ§Ã£o",
            "grÃ¡tis",
            "oferta imperdÃ­vel",
            "cartÃ£o de crÃ©dito",
            "vocÃª ganhou",
            "urgente",
            "dinheiro fÃ¡cil"
        ];

        let pontos = 0;

        palavrasSpam.forEach(palavra => {
            if (texto.includes(palavra)) {
                pontos++;
            }
        });

        if (pontos === 0) {
            resultado.innerHTML = "âœ… Provavelmente nÃ£o Ã© spam.";
            resultado.style.color = "green";
        } else if (pontos <= 2) {
            resultado.innerHTML = "âš ï¸ PossÃ­vel spam.";
            resultado.style.color = "orange";
        } else {
            resultado.innerHTML = "ðŸš¨ Alto risco de spam!";
            resultado.style.color = "red";
        }
    }
</script>

