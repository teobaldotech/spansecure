<body>

<div class="container">
    <h2>ðŸ“§ Verificador de Spam</h2>

    <input
        type="text"
        id="remetente"
        placeholder="Remetente (ex: promo@ofertas-gratis.xyz)"
    >

    <textarea
        id="textoEmail"
        placeholder="Cole o texto do e-mail aqui..."
    ></textarea>

    <button onclick="verificarSpam()">Verificar</button>

    <div class="barra-container">
        <div id="barraRisco" class="barra"></div>
    </div>

    <div id="resultado" class="resultado"></div>
</div>

<script>
    // =========================
    // CONFIGURAÃ‡ÃƒO
    // =========================
    const PALAVRAS_SPAM = {
        "ganhe dinheiro": 5,
        "dinheiro facil": 5,
        "voce ganhou": 4,
        "clique aqui": 3,
        "gratis": 3,
        "promocao": 2,
        "oferta imperdivel": 3,
        "urgente": 2,
        "cartao de credito": 4
    };

    const SCORE_MAXIMO = 25;

    const DOMINIOS_SUSPEITOS = [
        ".xyz", ".top", ".click", ".win", ".free"
    ];

    // =========================
    // FUNÃ‡Ã•ES
    // =========================
    function normalizarTexto(texto) {
        return texto
            .toLowerCase()
            .normalize("NFD")
            .replace(/[\u0300-\u036f]/g, "")
            .replace(/[^\w\s]/g, "");
    }

    function analisarRemetente(remetente) {
        let score = 0;
        const r = remetente.toLowerCase();

        // Muitos nÃºmeros no remetente
        if ((r.match(/\d/g) || []).length >= 4) score += 2;

        // DomÃ­nios suspeitos
        DOMINIOS_SUSPEITOS.forEach(dom => {
            if (r.endsWith(dom)) score += 3;
        });

        // NÃ£o parece e-mail vÃ¡lido
        if (!r.includes("@") || !r.includes(".")) score += 2;

        return score;
    }

    function heuristicasExtras(texto) {
        let score = 0;

        if ((texto.match(/!/g) || []).length >= 3) score += 2;
        if ((texto.match(/https?:\/\//g) || []).length >= 2) score += 3;
        if (texto === texto.toUpperCase() && texto.trim() !== "") score += 3;

        return score;
    }

    function calcularScore(texto, remetente) {
        const textoNorm = normalizarTexto(texto);
        let score = 0;

        for (let palavra in PALAVRAS_SPAM) {
            if (textoNorm.includes(palavra)) {
                score += PALAVRAS_SPAM[palavra];
            }
        }

        score += heuristicasExtras(texto);
        score += analisarRemetente(remetente);

        return score;
    }

    function scoreParaPercentual(score) {
        return Math.min(100, Math.floor((score / SCORE_MAXIMO) * 100));
    }

    function classificar(percentual) {
        if (percentual < 25) {
            return { texto: "âœ… Provavelmente nÃ£o Ã© spam", cor: "green" };
        } else if (percentual < 60) {
            return { texto: "âš ï¸ PossÃ­vel spam", cor: "orange" };
        } else {
            return { texto: "ðŸš¨ Alto risco de spam", cor: "red" };
        }
    }

    // =========================
    // AÃ‡ÃƒO
    // =========================
    function verificarSpam() {
        const texto = document.getElementById("textoEmail").value;
        const remetente = document.getElementById("remetente").value;
        const resultado = document.getElementById("resultado");
        const barra = document.getElementById("barraRisco");

        if (!texto.trim()) {
            resultado.textContent = "Digite o texto do e-mail.";
            resultado.style.color = "black";
            barra.style.width = "0%";
            return;
        }

        const score = calcularScore(texto, remetente);
        const percentual = scoreParaPercentual(score);
        const classificacao = classificar(percentual);

        resultado.textContent =
            `${classificacao.texto} â€” Risco: ${percentual}%`;
        resultado.style.color = classificacao.cor;

        barra.style.width = percentual + "%";
        barra.style.background = classificacao.cor;
    }
</script>

</body>
