<body>

<div class="container">
    <h2>ðŸ“§ Verificador de Spam</h2>

    <textarea id="textoEmail" placeholder="Cole o texto do e-mail aqui..."></textarea>

    <button onclick="verificarSpam()">Verificar</button>

    <div id="resultado" class="resultado"></div>
</div>

<script>
    // =========================
    // CONFIGURAÃ‡ÃƒO DO ALGORITMO
    // =========================
    const PALAVRAS_SPAM = {
        "ganhe dinheiro": 5,
        "dinheiro facil": 5,
        "voce ganhou": 4,
        "clique aqui": 3,
        "gratis": 3,
        "promocao": 2,
        "oferta imperdivel": 3,
        "urgente": 2,
        "cartao de credito": 4
    };

    const SCORE_MAXIMO = 20;

    // =========================
    // FUNÃ‡Ã•ES
    // =========================
    function normalizarTexto(texto) {
        return texto
            .toLowerCase()
            .normalize("NFD")
            .replace(/[\u0300-\u036f]/g, "")
            .replace(/[^\w\s]/g, "");
    }

    function heuristicasExtras(textoOriginal) {
        let score = 0;

        if ((textoOriginal.match(/!/g) || []).length >= 3) {
            score += 2;
        }

        if ((textoOriginal.match(/https?:\/\//g) || []).length >= 2) {
            score += 3;
        }

        if (textoOriginal === textoOriginal.toUpperCase() && textoOriginal.trim() !== "") {
            score += 3;
        }

        return score;
    }

    function calcularScore(texto) {
        let textoNorm = normalizarTexto(texto);
        let score = 0;

        for (let palavra in PALAVRAS_SPAM) {
            if (textoNorm.includes(palavra)) {
                score += PALAVRAS_SPAM[palavra];
            }
        }

        score += heuristicasExtras(texto);
        return score;
    }

    function scoreParaPercentual(score) {
        return Math.min(100, Math.floor((score / SCORE_MAXIMO) * 100));
    }

    function classificar(percentual) {
        if (percentual < 25) {
            return { texto: "âœ… Provavelmente nÃ£o Ã© spam", cor: "green" };
        } else if (percentual < 60) {
            return { texto: "âš ï¸ PossÃ­vel spam", cor: "orange" };
        } else {
            return { texto: "ðŸš¨ Alto risco de spam", cor: "red" };
        }
    }

    // =========================
    // AÃ‡ÃƒO DO BOTÃƒO
    // =========================
    function verificarSpam() {
        const texto = document.getElementById("textoEmail").value;
        const resultadoDiv = document.getElementById("resultado");

        if (!texto.trim()) {
            resultadoDiv.textContent = "Digite algum texto.";
            resultadoDiv.style.color = "black";
            return;
        }

        const score = calcularScore(texto);
        const percentual = scoreParaPercentual(score);
        const classificacao = classificar(percentual);

        resultadoDiv.textContent =
            `${classificacao.texto} â€” Risco: ${percentual}%`;
        resultadoDiv.style.color = classificacao.cor;
    }
</script>

